<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group row">
    <%= f.label :first_name, class: "col-3 col-form-label" %>
		<div class="col-9">
			<%= f.text_field :first_name, class: 'form-control' %>
		</div>
  </div>

  <div class="form-group row">
    <%= f.label :last_name, class: "col-3 col-form-label" %>
		<div class="col-9">
			<%= f.text_field :last_name, class: 'form-control' %>
		</div>
  </div>

  <div class="form-group row">
    <%= f.label :email, class: "col-3 col-form-label" %>
		<div class="col-9">
			<%= f.email_field :email, autofocus: true, class: 'form-control' %>
		</div>
  </div>

  <div class="form-group row">
    <%= f.label :password, class: "col-3 col-form-label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
		<div class="col-9">
			<%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
		</div>
  </div>

  <div class="form-group row">
    <%= f.label :password_confirmation, 'Confirmation', class: "col-3 col-form-label" %>
		<div class="col-9">
			<%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
		</div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" , class: 'btn btn-primary pull-right'%>
  </div>
<% end %>
